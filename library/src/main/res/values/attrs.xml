<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LabelView">

        <attr name="label_background_color" format="color"/>
        <attr name="label_text_color" format="color"/>
        <attr name="label_text" format="string"/>
        <attr name="label_text_size" format="dimension"/>

        <attr name="label_text_top_padding" format="dimension"/>
        <attr name="label_text_bottom_padding" format="dimension"/>
        <attr name="label_text_left_padding" format="dimension"/>
        <attr name="label_text_right_padding" format="dimension"/>

        <attr name="label_text_style">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
        </attr>

        <attr name="label_direction">
            <enum name="leftTop" value="-45"/>
            <enum name="rightTop" value="45"/>
        </attr>


    </declare-styleable>
</resources>